<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.froyo.darbhangabikes.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_otp"
            app:destination="@id/otpVerifyFragment" />
    </fragment>

    <fragment
        android:id="@+id/otpVerifyFragment"
        android:name="com.froyo.darbhangabikes.ui.auth.OtpVerifyFragment"
        android:label="Verify OTP"
        tools:layout="@layout/fragment_otp_verify">
        <action
            android:id="@+id/action_otp_to_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.froyo.darbhangabikes.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_rideStatus"
            app:destination="@id/rideStatusFragment" />
        <action
            android:id="@+id/action_home_to_bookingSheet"
            app:destination="@id/bookingBottomSheetFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_rides"
        android:name="com.froyo.darbhangabikes.ui.rides.RidesFragment"
        android:label="My Rides"
        tools:layout="@layout/fragment_rides" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.froyo.darbhangabikes.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/rideStatusFragment"
        android:name="com.froyo.darbhangabikes.ui.rides.RideStatusFragment"
        android:label="Ride Status"
        tools:layout="@layout/fragment_ride_status" />

    <dialog
        android:id="@+id/bookingBottomSheetFragment"
        android:name="com.froyo.darbhangabikes.ui.rides.BookingBottomSheetFragment"
        android:label="Book Ride"
        tools:layout="@layout/fragment_booking_bottom_sheet" />

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.froyo.darbhangabikes.ui.notifications.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/inviteFriendsFragment"
        android:name="com.froyo.darbhangabikes.ui.invite.InviteFriendsFragment"
        android:label="Invite Friends"
        tools:layout="@layout/fragment_invite_friends" />

    <fragment
        android:id="@+id/powerPassFragment"
        android:name="com.froyo.darbhangabikes.ui.pass.PowerPassFragment"
        android:label="Power Pass"
        tools:layout="@layout/fragment_power_pass" />

    <fragment
        android:id="@+id/supportFragment"
        android:name="com.froyo.darbhangabikes.ui.support.SupportFragment"
        android:label="Support"
        tools:layout="@layout/fragment_support" />

    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.froyo.darbhangabikes.ui.payment.PaymentFragment"
        android:label="Payment"
        tools:layout="@layout/fragment_payment" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.froyo.darbhangabikes.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>